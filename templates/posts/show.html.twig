{% extends 'layouts/base.html.twig' %}

{% block title post.title %}

{% block body %}
    <article>
        <h1>{{ post.title }}</h1>

        <p>{{ post.tags|join(', ') }}</p>

        <p>
            Published <time datetime="{{ post.publishedAt|date('Y-m-d H:i') }}">{{ post.publishedAt|date }}</time> by {{ post.author.email }}
        </p>

        <p>{{ post.body|raw }}</p>
    </article>

    <a href="{{ path('app_posts_share', { slug: post.slug }) }}">Share this post</a>

    <hr>

    <section>
        <h2 id="comments-count">{{ comments|length }} comments</h2>

        <div id="comment-list">
            {% for comment in comments %}
                {{ include('comments/_comment.html.twig', { comment, index: loop.index }) }}
            {% else %}
                <p>There are no comments yet.</p> 
            {% endfor %}
        </div>
    </section>

    <section class="mt-5">
        <h2>Similar posts</h2>

        {% for post in similarPosts %}
            {# <p>{{ post.tags|join(', ') }}</p> #}
            <p>
                <a href="{{ path('app_posts_show', { slug: post.slug }) }}">
                    {{ post.title }}
                </a>
            </p>
        {% else %}
            There are no similar posts yet.
        {% endfor %}
    </section>

    <turbo-frame id="new-comment-form">
        <section class="mt-5">
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(commentForm) }}
                        {{ form_widget(commentForm) }}

                        <button type="submit" class="btn btn-primary w-100" formnovalidate>Add Comment</button>
                    {{ form_end(commentForm) }}
                </div>
            </div>
        </section>
    </turbo-frame>
{% endblock %}
