{% extends 'base.html.twig' %}

{% block body %}
    <h1>Welcome to Bloggy!!!</h1>

    {% for post in posts %}
        <article>
            <h2>
                <a href="{{ path('app_posts_show', {slug: post.slug}) }}">
                    {{ post.title }}
                </a>
            </h2>

            <p>Published {{ post.publishedAt|date }} by {{ post.author.email }}</p>

            <p>{{ post.body|u.truncate(50, '@@') }}</p>
        </article>
    {% endfor %}
{% endblock %}
